{
    "python.defaultInterpreterPath": "./API/venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.profiles.windows": {
        "Gym Dev PowerShell": {
            "path": "powershell.exe",
            "args": [
                "-NoExit",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/.vscode/terminal-startup.ps1"
            ],
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.windows": "Gym Dev PowerShell",
    "python.analysis.extraPaths": [
        "./API"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "files.associations": {
        "*.py": "python"
    },
    "terminal.integrated.shellIntegration.enabled": true,
    "sqltools.connections": [
        {
            "name": "Gym-InfoSys Database",
            "driver": "SQLite",
            "database": "${workspaceFolder}/users.db",
            "group": "Gym-InfoSys",
            "connectOnStartup": false
        }
    ],
    "sqltools.useNodeRuntime": true,
    "sqltools.autoOpenSessionFiles": false,
    "sqltools.showStatusbar": true,
    "sqltools.telemetry": false
}